{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "echoCommand": true,
    "runner": "terminal",

    "tasks": 
    [
        {
            "taskName": "Build",
            "command": "",
            "isBuildCommand": true,
            "args": ["cd ${fileDirname} && javac ${fileBasename}"]
        },

        {
            "taskName": "Run",
            "command": "",
            "args": ["cd ${fileDirname} && java ${fileBasenameNoExtension}"]
        },

        {
            "taskName": "Build & Run",
            "command": "",
            "isBuildCommand": true,
            "args": ["cd ${fileDirname} && javac ${fileBasename} && java ${fileBasenameNoExtension}"]
        }
    ]
}
