{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "echoCommand": true,
    
    "tasks": 
    [
        {
            "taskName": "Build c++",
            "command": "",
            "isBuildCommand": true,
            "args": ["g++", "-o", "${fileBasenameNoExtension}", "${fileBasename}"]
        },

        {
            "taskName": "Build c++ (OpenGL)",
            "isBuildCommand": true,
            "command": "",
            "args": ["g++", "-o", "${fileBasenameNoExtension}", "${fileBasename}", "-lopengl32", "-lglut32", "-lglu32", "-lwinmm", "-lgdi32"]
        },

        {
            "taskName": "Run",
            "command": "${fileBasenameNoExtension}"
        }
    ]
}
