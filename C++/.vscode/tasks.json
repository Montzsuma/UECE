{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "taskName": "Build",
            "type": "shell",
            "command": "cd ${fileDirname} && g++ -o ${fileBasenameNoExtension} ${fileBasename}",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        
        {
            "taskName": "Run",
            "type": "shell",
            "command": "cd ${fileDirname} && ${fileBasenameNoExtension}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        
        {
            "taskName": "Build & Run",
            "type": "shell",
            "command": "cd ${fileDirname} && g++ -o ${fileBasenameNoExtension} ${fileBasename} && ${fileBasenameNoExtension}",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        
        {
            "taskName": "Build & Run (OpenGL)",
            "type": "shell",
            "command": "cd ${fileDirname} && g++ -o ${fileBasenameNoExtension} ${fileBasename} -lopengl32 -lglut32 -lglu32 -lwinmm -lgdi32 && ${fileBasenameNoExtension}",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }    
    ]
}
